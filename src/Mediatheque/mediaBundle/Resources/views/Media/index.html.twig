<h1>Media list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Disponible</th>
            <th>Titre</th>
            <th>Auteur</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('media_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.disponible }}</td>
            <td>{{ entity.getIdType.getNom }}</td>
            <td>{{ entity.titre }}</td>
            <td>{{ entity.auteur }}</td>
            <td>{{ entity.description }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('media_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('media_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('media_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
